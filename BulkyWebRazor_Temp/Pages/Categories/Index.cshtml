@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel


    <div class="container">
        <div class="row pt-3">
            <div class="col-6">
             <h2 class="text-primary" >
                 category list
             </h2>
            </div>
            <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                create new category <i class="bi bi-plus"></i>
                </a>
            </div>
        </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> 
                Category Name
            </th>
            <th>
                display Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-Id="@obj.id" class="btn btn-primary mx-2">
                   <i><i class="bi bi-pencil-square"></i></i> Edit
                        </a>
                            <a asp-page="/categories/delete" asp-route-Id="@obj.id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

